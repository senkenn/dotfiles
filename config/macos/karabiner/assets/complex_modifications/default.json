    {
      "description": "Caps -> Left Control (no lazy, no vars)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control" }],
          "type": "basic"
        }
