            "key_code": "y",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": ["command", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ]
        }
      ]
    },
    {
      "description": "v1.7 Option+Shift+S → Command+Control+Shift+4 (スクリーンショット)",
      "manipulators": [
        {
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "4",
              "modifiers": ["command", "control", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "v1.7 Maccy 用 Option+V → Command+Shift+C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["left_command", "left_shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "cmd+shift+q を VSCode 以外で無効化",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "vk_none" }],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.microsoft\\.VSCode$",
                "^com\\.microsoft\\.VSCodeInsiders$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["right_command", "right_shift"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "vk_none" }],
