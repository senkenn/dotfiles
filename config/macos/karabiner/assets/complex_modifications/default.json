    {
      "description": "v1.7 CapsLock→Command・Command→Option・Caps+Tab 調整",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "capslock_remapped",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "v1.8 CapsLock→無効化・CapsLock キーバインド",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_alone": [{ "key_code": "vk_none" }],
          "parameters": { "basic.to_if_alone_timeout_milliseconds": 250 }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": ["caps_lock"], "optional": ["any"] }
          },
          "to": [{ "key_code": "c", "modifiers": ["left_command"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": { "mandatory": ["caps_lock"], "optional": ["any"] }
          },
          "to": [{ "key_code": "v", "modifiers": ["left_command"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": { "mandatory": ["caps_lock"], "optional": ["any"] }
          },
          "to": [{ "key_code": "x", "modifiers": ["left_command"] }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": { "mandatory": ["caps_lock"], "optional": ["any"] }
          },
          "to": [{ "key_code": "z", "modifiers": ["left_command"] }]
        },
        {
          "type": "basic",
